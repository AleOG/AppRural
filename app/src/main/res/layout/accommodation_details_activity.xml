<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="offer"
            type="com.proyecto.apprural.model.beans.FullAccommodationOffer" />

        <variable
            name="adapter"
            type="com.proyecto.apprural.views.client.reservation.AccommodationDetailsAdapterFail" />

        </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.client.reservation.AccommodationDetailsActivity">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="409dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/logo">

                <!-- Introduce el titulo Cacteristicas generales -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Características generales"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Introduce un textview nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"Nombre de la casa: "+ offer.name}'
                    android:textSize="16sp" />

                <!-- introduce un textview precio -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"Precio por noche: " + offer.price + " €"}'
                    android:textSize="16sp" />

                <!-- introduce un textview localizacion -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:accommodationLocation='@{offer}'
                    android:textSize="16sp" />

                <!-- Introduce un textview de servicios incluidos -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicios incluidos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:includedServices="@{offer.services}"
                    android:textSize="16sp" />

                <!-- Introduce un textview de servicios extra -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicios extra"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:extraServices="@{offer.services}"
                    android:textSize="16sp" />

                <!-- Introduce un textview de prohibiciones -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prohibiciones"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:prohibitionsText="@{offer.prohibitions}"
                    android:textSize="16sp" />

                <!-- Introduce un titulo Habitaciones -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habitaciones"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:roomsText="@{offer.rooms}"
                    android:textSize="16sp" />

                <!-- Introduce un recyclebView para las habitaciones -->

                <!--<androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewRooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false" />-->

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/buttonBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Reservar" />

            <Button
                android:id="@+id/buttonExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="Salir" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
